{% extends 'base.html.twig' %}

{% block title %}<title>Absinthe - Mon Compte</title>{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2>Mon Compte</h2>
    <h4 class="text-right text-secondary">Compte crée le {{ app.user.createdAt|date("d/m/Y") }}</h4>
    <table class="table table-hover">
        <thead>
            <tr>
                <th colspan="2">Champ</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Email</th>
                <td> {{app.user.email}}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{app.user.pseudo|default('non renseigné')}}</td>
            </tr>
            <tr>
                <th colspan="2">Mot de Passe </th>
                <td>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#formProfile">
                        Modifier
                    </button>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="modal fade" id="formProfile" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modifier le mot de passe</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{form_start(formPassword)}}
                    {{form_rest(formPassword)}}


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="submit" class="btn btn-success" id="envoyer" class="btn btn-md btn-kitn" name="Envoyer" value="Enregistrer">Enregistrer</button>
                </div>
                {{form_end(formPassword)}}

            </div>
        </div>
    </div>

    {# </hr>
